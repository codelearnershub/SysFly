@using AirlineMS.Models.Dtos
@model IEnumerable<BranchDto>
@{
    ViewData["Title"] = "Branch List";
}
<div>
    <div class="text-center">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.Count() > 0){
                        var sn = 1;
                        foreach (var branch in Model)
                        {
                            <tr>
                                <td>@sn</td>
                                <td>Name</td>
                                <td>Email</td>
                                <td>Phone Number</td>
                                <td>Address</td>
                                <td>
                                    <a href="#">Edit</a>
                                </td>
                                <td>
                                    <a href="#">Remove</a>
                                </td>
                            </tr>
                            sn++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>