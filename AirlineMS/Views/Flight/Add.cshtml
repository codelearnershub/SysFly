@model AirlineMS.Models.Dtos.CreateFlightRequestModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}


<div>
    <form asp-action="Add">
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name">
            <span asp-validation-for="Name"></span>
            <br><br>
        </div>
        <div>
            <label asp-for="Destination"></label>
            <input type="text" asp-for="Destination">
            <span asp-validation-for="Destination"></span>
            <br><br>
        </div>
        <div>
            <label asp-for="TakeOffPoint"></label>
            <input type="text" asp-for="TakeOffPoint">
            <span asp-validation-for="TakeOffPoint"></span>
            <br><br>
        </div>
        <div>
            <label asp-for="TakeOffTime"></label>
            <input type="time" asp-for="TakeOffTime">
            <span asp-validation-for="TakeOffTime"></span>
            <br><br>
        </div>
        <div>
            <label asp-for="LandingTime"></label>
            <input type="time" asp-for="LandingTime">
            <span asp-validation-for="LandingTime"></span>
            <br><br>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input type="text" asp-for="Price">
            <span asp-validation-for="Price"></span>
            <br><br>
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>