@using AirlineMS.Models.Dtos
@model BranchDto
@{
    ViewData["Title"] = "Update Branch";
}
<div>
    <div class="text-center">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form asp-controller="Branch" asp-action="Update" asp-route-Id="@Model.Id">
                <div>
                    <label for="Name">Name</label>
                    <input type="text" name="Name" value="@Model.Name"/>
                </div>
                <div>
                    <label for="PhoneNumber">PhoneNumber</label>
                    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber"/>
                </div>
                <div>
                    <label for="Address">Address</label>
                    <input type="text" name="Address" value="@Model.Address"/>
                </div>
                <div>
                    <button class="btn btn-primary" style="width: 30%;">Update Branch</button>
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>