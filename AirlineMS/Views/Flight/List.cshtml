@model IEnumerable<AirlineMS.Models.Dtos.FlightDto>

<h3>List of Available flights</h3>

<div class="pt-4">
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>flightName</th>
                    <th>Destination</th>
                    <th>Take off</th>
                    <th>Take Off Time</th>
                    <th>Landing Time</th>
                    <th>Price</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.Id</td>
                        <td>@flight.Name</td>
                        <td>@flight.Destination</td>
                        <td>@flight.TakeOffPoint</td>
                        <td>@flight.TakeOffTime</td>
                        <td>@flight.LandingTime</td>
                        <td>@flight.Price</td>
                        <td><a asp-action="Delete" asp-controller="Flight" asp-route-id="@flight.Id">Remove</a></td>
                    </tr>
                }
            </tbody>
            <div>

            </div>
        </table>
    </div>
