@model IEnumerable<AirlineMS.Models.Dtos.RoleDto>

<h3>List of Available Roles</h3>

<div class="pt-4">
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>RoleName</th>
                    <th>Description</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.Description</td>
                        <td><a asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id">Remove</a></td>
                    </tr>
                }
            </tbody>
            <div>

            </div>
        </table>
    </div>
