@using AirlineMS.Models.Dtos
@model CreateBranchRequestModel
@{
    ViewData["Title"] = "Create Branch";
}
<div class="border p-3 mt-4">
    <div class="text-center"><h1>@ViewData["Title"]</h1></div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="Create">
                <div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" type="text" />
                </div>
                <div>
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" type="text" />
                </div>
                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" type="text" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mt-2 text-end">
                    <button type="submit" class="btn btn-primary" style="width: 30%">Create Branch</button>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div> 