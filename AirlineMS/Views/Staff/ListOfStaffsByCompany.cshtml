@model IEnumerable<AirlineMS.Models.Dtos.StaffDto>

<h2>List Of Staffs</h2>
<div>
    <table class="table table-active table-bordered table-responsive table-striped">
        <thead>
            <tr>
                <td>
                S/N
                </td>
                <td>
                First Name
                </td>
                <td>
                Last Name
                </td>
                <td>
                Phone Number
                </td>
                <td>
                Details 
                </td>
            </tr>
        </thead>
        <tbody>
            @{
                int a = 1;
                    foreach (var staff in Model)
                    {
                    <tr>
                        <td>@a</td>
                        <td>@staff.FirstName</td>
                        <td>@staff.LastName</td>
                        <td>@staff.PhoneNumber</td>
                        <td>
                            <a asp-controller="Staff" asp-action="Details">Details</a>
                            </td>
                    </tr>
                        {
                            a++;
                        }
                    }
                }
        </tbody>
    </table>
</div>