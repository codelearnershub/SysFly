@using AirlineMS.Models.Dtos;
@model CompanyDto;
@{
    ViewData["Title"] = "Delete Company";
}

<div class="border mt-4">
    <div class="col-lg-12"><center><h1>@ViewData["Title"]</h1></center></div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class=""><center>Are you sure you want to delete this Company?</center></div>
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <td><strong>Id</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Company Name</strong></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                    <tr>
                        <td><strong>CAC Registration Num</strong></td>
                        <td>@Model.CACRegistrationNum</td>
                    </tr>
                    <tr>
                        <td><strong>CAC Document</strong></td>
                        <td>@Model.CACDocument</td>
                    </tr>
                    <tr>
                        <td><strong>Logo</strong></td>
                        <td>@Model.Logo</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-end">
                <form asp-action="Delete">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete Company</button>
                </form>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>